<Window x:Class="UI.ContractWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="ContractWindow"
        Height="400"
        Width="500">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="100*" />
            <RowDefinition Height="22*" />
            <RowDefinition Height="177*" />
        </Grid.RowDefinitions>

        <TextBlock Name="OperationTitle"
                   Grid.Row="0"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,10"
                   Text="Контракт для: [Название операции]" />

        <TextBlock Grid.Row="1"
                   Text="Pre-условие:"
                   FontWeight="Bold"
                   Margin="0,0,0,5" />

        <TextBlock Name="PreConditionText"
                   Grid.Row="2"
                   Margin="10,0,0,10"
                   TextWrapping="Wrap"
                   Text="Текст предусловия..." />

        <TextBlock Grid.Row="3"
                   Text="Post-условие:"
                   FontWeight="Bold"
                   Margin="0,0,0,5" />

        <TextBlock Name="PostConditionText"
                   Grid.Row="4"
                   Margin="10,0,0,10"
                   TextWrapping="Wrap"
                   Text="Текст постусловия..." />

    </Grid>
</Window>
